@model ICBF_3.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<style>
    .form-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        color: #007bff;
    }

    .button-group {
        margin-top: 20px;
    }
</style>

<h1 class="form-title">Crear Usuario</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Identificacion" class="control-label">Identificación</label>
                        <input asp-for="Identificacion" class="form-control" />
                        <span asp-validation-for="Identificacion" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                        <input asp-for="FechaNacimiento" class="form-control" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label">Correo Electrónico</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label">Dirección</label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FkIdRol" class="control-label">Rol</label>
                        <select asp-for="FkIdRol" class="form-control" asp-items="ViewBag.FkIdRol"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="FkIdTipoDoc" class="control-label">Tipo de Documento</label>
                        <select asp-for="FkIdTipoDoc" class="form-control" asp-items="ViewBag.FkIdTipoDoc"></select>
                    </div>
                </div>
            </div>

            <div class="form-group text-center button-group">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
