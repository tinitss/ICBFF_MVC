@model ICBF_3.Models.AvancesAcademico

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-container {
        max-width: 600px;
        margin: auto;
        margin-top: 20px;
    }

    .page-title {
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
        color: #007bff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-submit {
        margin-top: 10px;
    }
</style>

<div class="form-container">
    <h1 class="page-title">Crear Avance Académico</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FechaNota" class="control-label">Fecha de la Nota</label>
            <input asp-for="FechaNota" class="form-control" />
            <span asp-validation-for="FechaNota" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion" class="control-label">Descripción</label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AnoEscolar" class="control-label">Año Escolar</label>
            <input asp-for="AnoEscolar" class="form-control" />
            <span asp-validation-for="AnoEscolar" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nivel" class="control-label">Nivel</label>
            <input asp-for="Nivel" class="form-control" />
            <span asp-validation-for="Nivel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Notas" class="control-label">Notas</label>
            <input asp-for="Notas" class="form-control" />
            <span asp-validation-for="Notas" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FkIdNino" class="control-label">Niño</label>
            <select asp-for="FkIdNino" class="form-control" asp-items="ViewBag.FkIdNino"></select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-submit">Crear</button>
            <a asp-action="Index" class="btn btn-secondary btn-submit">Volver a la Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
