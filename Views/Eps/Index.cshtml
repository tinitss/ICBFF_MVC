@model IEnumerable<ICBF_3.Models.Ep>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table-container {
        max-width: 100%;
        margin: auto;
        margin-top: 20px;
    }

    .page-title {
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
        color: #007bff;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
            padding: 8px;
        }

        .table th {
            background-color: #343a40;
            color: #ffffff;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .btn {
        margin: 5px;
    }
</style>

<div class="table-container">
    <h1 class="page-title">Lista de Eps</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Identificación (NIT)
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Centro Médico
                    </th>
                    <th>
                        Dirección
                    </th>
                    <th>
                        Teléfono
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CentroMedico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PkIdEps" class="btn btn-warning">Editar</a>
                            <form asp-action="Delete" asp-route-id="@item.PkIdEps" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro que desea eliminar este registro?')">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
