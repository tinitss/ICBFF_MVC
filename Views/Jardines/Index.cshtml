@model IEnumerable<ICBF_3.Models.Jardine>

@{
    ViewData["Title"] = "Index";
}

<style>
    .page-title {
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
        color: #007bff;
    }

    .table-container {
        max-width: 800px;
        margin: auto;
        margin-top: 20px;
    }

    .btn-margin {
        margin-right: 5px;
    }
</style>

<div class="table-container">
    <h1 class="page-title">Lista de Jardines Infantiles</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-margin">Crear Nuevo</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PkIdJardin" class="btn btn-warning btn-margin">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.PkIdJardin" class="btn btn-danger" onclick="return confirm('¿Está seguro que desea eliminar este jardín infantil?')">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
