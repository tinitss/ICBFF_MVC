@model ICBF_3.Models.Nino

@{
    ViewData["Title"] = "Crear Niño";
}

<style>
    .form-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        color: #007bff;
    }
</style>

<h1 class="form-title">Crear Niño</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Niup" class="control-label">NIUP</label>
                <input asp-for="Niup" class="form-control" />
                <span asp-validation-for="Niup" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoSangre" class="control-label">Tipo de Sangre</label>
                <input asp-for="TipoSangre" class="form-control" />
                <span asp-validation-for="TipoSangre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CiudadNacimiento" class="control-label">Ciudad de Nacimiento</label>
                <input asp-for="CiudadNacimiento" class="form-control" />
                <span asp-validation-for="CiudadNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FkIdEps" class="control-label">EPS</label>
                <select asp-for="FkIdEps" class="form-control" asp-items="ViewBag.FkIdEps"></select>
            </div>

            <div class="form-group">
                <label asp-for="FkIdJardin" class="control-label">Jardín Infantil</label>
                <select asp-for="FkIdJardin" class="form-control" asp-items="ViewBag.FkIdJardin"></select>
            </div>

            <div class="form-group">
                <label asp-for="FkIdUsuario" class="control-label">Usuario Responsable</label>
                <select asp-for="FkIdUsuario" class="form-control" asp-items="ViewBag.FkIdUsuario"></select>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
